@using Ouikum;
@using res = Prosoft.Resource.Web.Ouikum;
@if (ViewBag.CateByTypes != null)
{
    foreach (var Cate in (List<b2bCategory>)ViewBag.CateByTypes)
    {
        <div class="mar_l10 mar_b10">
            <img src="@Url.css("Admin/Category/images/img_plus.gif")" />
            <a class="cate-lv2 cursor" data-product-count="@Cate.ProductCount" data-id="@Cate.CategoryID" 
            data-name="@Cate.CategoryName" data-nameEN="@Cate.CategoryNameEng" data-parentid="@Cate.ParentCategoryID" data-path="@Cate.ParentCategoryPath" data-catetype="@Cate.CategoryType" onclick="CategoryLevel3($(this))">@Cate.CategoryName</a>
            <img class="editcate2 cursor hide" src="@Url.css("Admin/Category/images/img_edit.png")" onclick="editcate2($(this))" />
            <img class="deletecate2 cursor hide" src="/Content/Admin/Category/images/img_delete.png" onclick="if(confirm('คุณต้องการลบหมวดหมู่หรือไม่ ?')){deletecate2(@Cate.CategoryID);}">
        </div>
    }
}

<div id="myModalcate2" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 id="myModalLabel">@res.Product.lbledit_cateLV2 : <span class="lablecate2"></span></h4>
  </div>
  <div class="modal-body">
    ชื่อหมวดหมู่ (ภาษาไทย)  : <input id="namecate2" type="text" value="" class="namecate2" /><br />
    ชื่อหมวดหมู่ (ภาษาอังกฤษ): <input id="namecate2EN" type="text" value="" class="namecate2EN" />
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary savecate2" data-dismiss="modal" aria-hidden="true">@res.Common.btnSave</button>
    <button class="btn" data-dismiss="modal" aria-hidden="true">@res.Common.lblCancel</button>
  </div>
</div>

<div id="addcate2" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>เพิ่มหมวดหมู่สินค้ารอง</h4>
  </div>
  <div class="modal-body">
    ชื่อหมวดหมู่ (ภาษาไทย)  : <input name="MCategoryLV2" type="text" id="MCategoryLV2"/><br />
    ชื่อหมวดหมู่ (ภาษาอังกฤษ)  : <input name="MCategoryENLV2" type="text" id="MCategoryENLV2" />
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" id="InsertTextENCateLV2" data-dismiss="modal" aria-hidden="true">@res.Common.btnSave</button>
    <button class="btn" data-dismiss="modal" aria-hidden="true">@res.Common.lblCancel</button>
  </div>
</div>