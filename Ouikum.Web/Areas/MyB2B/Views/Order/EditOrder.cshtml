@{
    ViewBag.Title = "EditOrder";
    Layout = "~/Views/MP/MP_Order.cshtml";
}
@using res = Prosoft.Resource.Web.Ouikum;
@using Ouikum;

<style>
    .tab-process-order
    {
        display:inline-block;
        border-bottom:5px solid #F2F2F2;
        height:20px;
        line-height:20px;
        padding:0 20px;
        margin-left:2px;
    }
    
    .tab-process-order.active
    { 
        border-bottom:5px solid #006699;
    }
</style>

<div class="mainContent" style="width:100%;margin-top:-5px">
    <div class="clean"></div>
    @Html.Partial("MyB2B/Order/WelcomeMessage")
    <!-------------------------Main Menu---------------------------->
@*    @Html.Partial("MyB2B/Order/WebconfigOrderMenu")*@
    <button class="btn fl_r bg_product_hide hide mar_r10 ShowTabmenu mar_t10" type="button" style="padding:0 5px">
        <i class="icon-chevron-down cursor btn-tootip-bottom"  rel="tooltip Popover" data-original-title="@res.Common.btnShow"></i>
    </button>
    <div class="clean"></div>

    <div class="clean10"></div>
    @Html.Partial("UC/EditOrderContent")
    <div class="clean10"></div>
 </div>

<script src="@Url.js("MyB2B/Order/ManageOrder.js")" type="text/javascript"></script>
<script type="text/javascript">

    function DeleteOrderDetail(OrderDetailId, OrderId) {
        data = {
            OrderDetailID: OrderDetailId,
            OrderID: OrderId
        }
        $.ajax({
            url: GetUrl('@res.Pageviews.UrlOrderDetail'),
            data: data,
            traditional: true,
            success: function (data) {
                window.location.reload();
            },
            error: function () {
            },
            type: "POST"
        });
        return false;
    }  

</script>
