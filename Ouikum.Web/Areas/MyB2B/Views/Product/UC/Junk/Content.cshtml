@using res = Prosoft.Resource.Web.Ouikum;
@using Ouikum;
@using Telerik.Web.Mvc; 
 
 
<div class="Bg_Allitem">
    <ul class="galleryrec ui-helper-reset"> 
    @foreach (var it in (IEnumerable<view_SearchProduct>)ViewBag.Products)
    { 
            <li class="fl_l mar_tl17 Bg_item product-item"  data-id="@it.ProductID" data-rowversion="@it.RowVersion" catelv1="@it.CateLV1" catelv2="@it.CateLV2" catelv3="@it.CateLV3">
            <div class="font_center"> 
            <div class="fl_r mar_t8 icon_Del cursor del-product" title="@res.Common.btnDelete_th"></div>  
            <div class="fl_r mar_t8 icon_Restore cursor restore-product" title="@res.Common.btnRestore"></div>
                <div class="clean"></div>
                    <div class="layout_center" style="width:160px; height:160px; margin:0 auto;" onclick="CallQuickDetails()">
                        <a class="cursor" >
                            <img alt="@it.ProductName" title="@it.ProductName"  src="@Url.ThumbProduct(it.CompID,it.ProductID,it.ProductImgPath)"  onload="resizeImg($(this),155,155);setElementMiddle(155, 155,$(this));"/> 
                         </a>
                    </div>
                <div class="clean5"></div>
            <strong>@Html.SubText(it.ProductName, 30)</strong>
            </div>         
            </li>
    }
    </ul>
    <div class="clean20"></div>
        <input type="hidden" class="hidPageIndex" value="@ViewBag.PageIndex" />
        <input type="hidden" class="hidPageSize" value="@ViewBag.PageSize" />
        <input type="hidden" class="hidTotalRow" value="@ViewBag.TotalRow" />
        <input type="hidden" class="hidTotalPage" value="@ViewBag.TotalPage" /> 
    </div>


    
    <script type="text/javascript">
        var proCount = $('#status-junk').text();
        if (proCount != "0") {
            if (parseInt(proCount) > 4) {
                $("#sidebar").css("height", "785px");
            }
            if (parseInt(proCount) > 9) {
                $("#sidebar").css("height", "1035px");
            }
            if (parseInt(proCount) > 14) {
                $("#sidebar").css("height", "1288px");
            }
        }

        if ($('.hidTotalPage').val() == 0) {
            $('.hidTotalPage').val(1);
        }
        $(function () {
                //-------------------------------------
                CheckPage(parseInt("@ViewBag.PageIndex", 10)); 

                // ตรวจสอบว่าเปิดการแก้ไขได้อยู่หรือเปล่า  
              



            });

         
       
    </script>